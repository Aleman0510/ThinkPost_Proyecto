<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Fondo azul en la mitad superior -->
    <View
        android:id="@+id/topHalfBackground"
        android:layout_width="351dp"
        android:layout_height="226dp"
        android:background="#1F319D"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divisor para separar la mitad superior e inferior -->
    <View
        android:id="@+id/divider"
        android:layout_width="460dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <!-- Título centrado -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="ThinkPost"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvSubtitle"
        android:layout_marginBottom="8dp"/>

    <!-- Subtítulo agregado -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="299dp"
        android:layout_height="73dp"
        android:layout_marginBottom="16dp"
        android:text="Expresa tus pensamientos y compártelos con el mundo."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/cardEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- Contenedor para el EditText con fondo y borde redondeado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEditText"
        android:layout_width="362dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <EditText
            android:id="@+id/etPost"
            android:layout_width="373dp"
            android:layout_height="372dp"
            android:background="@android:color/transparent"
            android:gravity="start|top"
            android:hint="Escribe lo que estás\npensando..."
            android:inputType="textMultiLine"
            android:minHeight="200dp"
            android:padding="12dp"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:padding="12dp"/>

        <!-- Espacio para separar los botones -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Publicar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1F319D"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
